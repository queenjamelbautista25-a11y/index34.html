  <!-- Google Font -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet"/>

  <style>
    :root {
      --brand-maroon: #800000;
      --brand-gold: #D4AF37;
    }

    body {
      font-family: 'Inter', sans-serif;
      background: linear-gradient(180deg, #fffaf7 0%, #ffffff 100%);
    }
  </style>
